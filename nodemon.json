{
  "watch": "*.*",
  "ext": "js,mjs,cjs,json",
  "$schema": "nodemon.json",
  "exec": "node src/server.js",
  "watchOptions": {
    "followSymlinks": true
  },
  "extOptions": {
    "nodemon": {
      "verbose": true,
      "ignore": [
        "src/logs/*",
        "src/**/*.{spec,test}.js"
      ]
    }
  }
}
